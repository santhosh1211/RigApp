<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/reg_layout"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="#FAF5F5"
        android:padding="24dp"
        android:paddingTop="16dp"
        android:orientation="vertical">

        <TextView
            style="@style/Base.V7.Widget.AppCompat.Toolbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="2dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:padding="2dp"
            android:text="Assign Manager"
            android:textSize="22sp"
            android:textStyle="bold" />

        <org.angmarch.views.NiceSpinner
            android:id="@+id/managerspinner"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            >
        </org.angmarch.views.NiceSpinner>
        <android.support.design.widget.TextInputEditText
            android:id="@+id/vno"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textSize="14sp"
            android:paddingLeft="5dp"
            android:inputType="text"
            android:hint="Rig Vehicle No"
            android:layout_marginTop="10dp"

            android:background="@drawable/border_set"
            android:maxLines="1" />
        <android.support.design.widget.TextInputEditText
            android:id="@+id/svno"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textSize="14sp"
            android:paddingLeft="5dp"
            android:hint="Rig Support Vehicle No"
            android:inputType="textPostalAddress"
            android:layout_marginTop="10dp"
            android:background="@drawable/border_set"
            android:maxLines="3"

            />


        <android.support.v7.widget.AppCompatButton
            android:id="@+id/addmanager"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="10dp"
            android:background="@color/colorPrimaryDark"
            android:paddingLeft="5dp"
            android:text="Assign"
            android:textColor="@color/light_gray"
            android:textSize="14sp" />

      </LinearLayout>
</ScrollView>
